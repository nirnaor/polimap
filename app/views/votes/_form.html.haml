= form_for @vote do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vote.errors.count, "error")} prohibited this vote from being saved:"
      %ul
        - @vote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :city_id
    = f.number_field :city_id
  .field
    = f.label :party_id
    = f.number_field :party_id
  .actions
    = f.submit 'Save'
